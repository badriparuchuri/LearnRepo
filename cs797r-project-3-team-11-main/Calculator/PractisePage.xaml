<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.PractisePage"
             Title="PractisePage">
    <VerticalStackLayout Spacing="10">

        <Label x:Name="questionText" TextColor="{StaticResource White}" FontSize="44" FontAttributes="Bold" ></Label>
    
        <Border>
        <Button x:Name="optionOneBtn" Clicked="optionBtn_Clicked"></Button>
        </Border>
        <Border>
        <Button x:Name="optionTwoBtn" Clicked="optionBtn_Clicked"></Button>
        </Border>
        <Border>
        <Button x:Name="optionThreeBtn" Clicked="optionBtn_Clicked"></Button>
        </Border>
        <Label x:Name="messageText"></Label>
    </VerticalStackLayout>
</ContentPage>
